<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="object"
            type="com.gildaswise.horizontalcounterdemo.ObjectTest"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.gildaswise.horizontalcounter.HorizontalCounter
            android:id="@+id/horizontal_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:stepValue="@{object.step ?? Double.valueOf(1)}"
            app:initialValue="@{object.value ?? Double.valueOf(1)}"
            app:maxValue="@{object.max ?? Double.valueOf(100)}"
            app:minValue="@{object.min ?? Double.valueOf(-100)}"
            app:textColor="#009688"
            app:minusButtonColor="#F44336"
            app:plusButtonColor="#2196F3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</layout>